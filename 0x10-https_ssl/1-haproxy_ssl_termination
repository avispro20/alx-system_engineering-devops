global
    log     /dev/log local0
    maxconn 2048
    user    haproxy
    group   haproxy
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option  redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000
    option  forwardfor
    option  http-server-close=

# config for www.airbnbclone.tech fronted and backend load balancing
frontend airbnbclone-front1
        bind    *:80
        default_backend airbnbclone-back

frontend airbnbclone-front2
        bind *:443 ssl crt /etc/letsencrypt/live/www.airbnbclone.tech/all.pem
        default_backend airbnbclone-back

backend www-backend
   balance  roundrobin
   redirect scheme https if !{ ssl_fc }
   server 67969-web-01 100.25.104.113:80 check
   server 67969-web-02 100.25.31.234:80 check

backend letsencrypt-backend
   server letsencrypt 127.0.0.1:54321
